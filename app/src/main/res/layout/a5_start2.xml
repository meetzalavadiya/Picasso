<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ads1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.pesonal.adsdk.nativad.nativad_Card
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/_5dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner" />

            </com.pesonal.adsdk.nativad.nativad_Card>

        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ads1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/icone_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/ads1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/share_red"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_gradiant"
                        android:padding="12dp"
                        android:src="@drawable/ic_icon_share" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/rate_red"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_gradiant"
                        android:padding="12dp"
                        android:src="@drawable/ic_icon_rate" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/privacy_red"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_gradiant"
                        android:padding="12dp"
                        android:src="@drawable/ic_icon_privacy" />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_marginBottom="@dimen/_50sdp"
                android:id="@+id/animation_view"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@id/icone_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/gradiant_btn_round">

                <ImageView
                    android:alpha="0.8"
                    android:layout_width="@dimen/value_40"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:src="@drawable/all_videos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="30sp"
                    android:text="@string/app_name"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <com.pesonal.adsdk.bannerad.bannerad_Card
            android:id="@+id/ads"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="@dimen/dp_4"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>



</RelativeLayout>